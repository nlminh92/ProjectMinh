<div class="container body-wrapper">
  <div class="box-container box-middle box-space-around box-row-wrap">
    <div class="box-md-50 box-sm-80 box-xs-100">
      <div class="text-center">
        <h3 class="title">Sign up</h3>
      </div>

      <div class="panel panel-default box-xs-100">
        <div class="panel-body panel-body-custom">
          <div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group margin-bottom-15px">
                <%= f.label :email %>:
                <%= f.email_field :email, class: "form-control",
                  placeholder: true, autofocus: true, required: true %>
              </div>

              <div class="form-group margin-bottom-15px">
                <%= f.label :password %>:
                <%= f.password_field :password, class: "form-control",
                  placeholder: true, required: true %>
              </div>

              <div class="form-group margin-bottom-15px">
                <%= f.label :password_confirmation %>:
                <%= f.password_field :password_confirmation, class: "form-control",
                  placeholder: true, required: true %>
              </div>
              <div class="margin-bottom-15px">
                 <%= f.radio_button :type_user, 0, label: "Brand" %>
                 <%= f.label :Brand %>
                 <%= f.radio_button :type_user, 1, label: "Retailer" %>
                 <%= f.label :Retailer %>
              </div>
              <div class="form-group margin-bottom-15px">
                <%= f.label :Company %><br />
                <%= f.text_field :company, autofocus: true, class: "form-control",  placeholder: true %>
              </div>
              <div class="form-group margin-bottom-15px">
                <%= f.label :Company_website %><br />
                <%= f.url_field :website, autofocus: true, class: "form-control",  placeholder: true %>
              </div>

              <div class="form-group margin-bottom-15px">
               <%= f.label :Addresss %><br />
               <%= f.text_field :address, autofocus: true, class: "form-control",  placeholder: true %>
              </div>

              <div class="form-group margin-bottom-15px">
                <%= f.label :Zip_code %><br />
                <%= f.text_field :zip_code, autofocus: true, class: "form-control",  placeholder: true %>
              </div>

              <div class="form-group margin-bottom-15px">
                <%= f.label :Country %><br />
                <%= f.text_field :country, autofocus: true, class: "form-control",  placeholder: true %>
              </div>
              
              <div class="form-group margin-bottom-15px">
                <%= f.label :first_name_contact %><br />
                <%= f.text_field :firstname_contact, autofocus: true, class: "form-control",  placeholder: true %>
              </div>
              
              <div class="form-group margin-bottom-15px">
                <%= f.label :last_name_contact %><br />
                <%= f.text_field :lastname_contact, autofocus: true, class: "form-control",  placeholder: true %>
              </div>

              <div class="form-group margin-bottom-15px">
                <%= f.label :phone_number %><br />
                <%= f.telephone_field :phone, autofocus: true, class: "form-control",  placeholder: true %>
              </div>

              <div class="form-group margin-bottom-15px">
                <%= f.label :Description %><br />
                <%= f.text_area :description, autofocus: true, class: "form-control",  placeholder: true %>
              </div>   

              <div class="margin-bottom-15px">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>

              <div class="form-group">
                <%= f.submit "Sign up", class: "btn btn-success btn-block" %>
              </div>

            <% end %>
          </div>
        </div>
      </div>

      <div class="panel panel-default box-xs-100">
        <div class="panel-body">
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
