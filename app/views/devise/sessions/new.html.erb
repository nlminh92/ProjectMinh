<div class="container body-wrapper">
  <div class="box-container box-middle box-space-around box-row-wrap">
    <div class="box-md-50 box-sm-80 box-xs-100">
      <div class="text-center">
        <h3 class="title">Log in</h3>
      </div>

      <div class="panel panel-default box-xs-100">
        <div class="panel-body panel-body-custom">
          <div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group margin-bottom-15px">
                <%= f.label :email %>:
                <%= f.email_field :email, class: "form-control",
                  placeholder: true, autofocus: true, required: true %>
              </div>

              <div class="form-group margin-bottom-15px">
                <%= f.label :password %>:
                <%= f.password_field :password, class: "form-control",
                  placeholder: true, required: true %>
              </div>

              <div class="margin-bottom-15px">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>

              <div class="form-group">
                <%= f.submit "Log in", class: "btn btn-success btn-block" %>
              </div>

            <% end %>
          </div>
        </div>
      </div>

      <div class="panel panel-default box-xs-100">
        <div class="panel-body">
          <div class="text-center">
            <span> <%= t "Chưa có tài khoản ?" %></span><br>
              <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
