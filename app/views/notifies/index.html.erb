<form action="/notifies" method="POST">
  <div id="page-wrapper">
    <div class="row" style="margin-top: 20px;">
      <div class="col-md-2">
        <h4>NOTIFICATIONS</h4>
      </div>
      <div class="col-md-3 col-md-offset-7">
        <button type="submit" class="btn btn-primary">+ ALL READ</button>
      </div>
    </div>
    <ul class="list-group">
      <% if current_user.type_user == 0 %>
        <% @notifi.each do |i| %>
        <li class="list-group-item">
          <img src="<%= i.retailler.user.avatar %>" class="img-brand">
          <b>Retailler <%= i.retailler.name %></b> accept your connect
          <td><input type="checkbox" value="<%= i.id %>" name="active[]" checked
          </td>
        </li>
        <% end %>
      <% elsif current_user.type_user == 1 %>
        <% @notifi.each do |i| %>
          <li class="list-group-item">
            <img src="<%= i.brand.user.avatar %>" class="img-brand">
            <b>Brand <%= i.brand.name %></b> accept your connect
            <td><input type="checkbox" value="<%= i.id %>" name="active[]" checked
            </td>
          </li>
        <% end %>
      <% end %>
    </ul>
  <div>
</form>
<style>
  .img-brand {
    width: 90px;
    height: 90px;
  }
</style>
