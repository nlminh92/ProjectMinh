<div id="page-wrapper">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Retailler sent(<%= @card_send.count %>)</a></li>
    <li><a data-toggle="tab" href="#menu">Brand Active(<%= @card_active.count %>)</a></li>
    <li><a data-toggle="tab" href="#menu2">Brand Not active(<%= @card_not_active.count %>)</a></li>
  </ul>
<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <div class="col-md-12">
        <ul class="list-group">
          <% @card_send.each_with_index do |i, index| %>
            <%= link_to admin_active_order_path(1), data: {"turbolinks" => false}  do %>
                <li style="margin-top: 20px;"><%= index + 1 %>.<b>Retailler: <%= i.retailler.name %></b> want to order to <b>Brand: <%= i.brand.name %></b></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
    <div id="menu" class="tab-pane fade in">
      <div class="col-md-12">
        <ul class="list-group">
          <% @card_active.each_with_index do |i, index| %>
            <%= link_to admin_active_order_path(1), data: {"turbolinks" => false}  do %>
                <li style="margin-top: 20px;"><%= index + 1 %>.Brand accept order "<b>Retailler: <%= i.retailler.name %></b> want to order to <b>Brand: <%= i.brand.name %></b>"</li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>

    <div id="menu2" class="tab-pane fade in">
      <div class="col-md-12">
        <ul class="list-group">
          <% @card_not_active.each_with_index do |i, index| %>
            <%= link_to admin_active_order_path(1), data: {"turbolinks" => false}  do %>
                <li style="margin-top: 20px;"><%= index + 1 %>.Brand not accept order "<b>Retailler: <%= i.retailler.name %></b> want to order to <b>Brand: <%= i.brand.name %></b>"</li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
</div>
