<div id="page-wrapper">
  <% if current_user.type_user == 1 %>
  <%= render "layout_login/retailerform" %>

  <% elsif current_user.type_user != 1 %>
    <h6>You are <b>
    <% if current_user.type_user == 0 %>
      <p>Brand</p>
    <% elsif current_user.type_user == 2 %>
      <p>Admin</p>
    <% elsif current_user.type_user == 3 %>
      <p>Showroom</p>
      <% if current_user.activated %>
        <div class="row">
          <div class="col-md-12">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Logo</th>
                  <th>Name</th>
                  <th>Company</th>
                  <th>Website</th>
                </tr>
              </thead>
              <tbody>
                <% @brands.each_with_index do |brand, index| %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <% unless brand.user.avatar.blank? %>
                      <td><img src="<%= brand.user.avatar %>" alt="" class="image-product"></td>
                    <% else %>
                      <td><img src="/img/user.jpg" alt="" class="image-product"></td>
                    <% end %>
                    <td><%= brand.name %></td>
                    <td><%= brand.user.company %></td>
                    <td><%= brand.user.website %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

      <% end %>
    <% end %></b></h6>



   <%# else %>
     <%# if current_user.type_user == 0 %>
       <!-- <p>Brand</p> -->
       <!-- <h1>Account actived</h1 -->
     <%# elsif current_user.type_user == 2 %>
       <!-- <p>Admin</p> -->
       <!-- <h1>Account actived</h1> -->
     <%# else %>
     <%#= render "layout_login/retailerform" %>
     <%# end %>
  <% end %>
</div>

