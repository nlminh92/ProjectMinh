<div id="page-wrapper" >
  <%= form_tag({controller: "/profiles", action: "update"}, method: "put", multipart: true, class: "form-horizontal form-label-left form") do %>
    <div class="form-group" style="margin-top: 40px; margin-left: 15px;">
      <label for="file">Logo</label>
      <input type="file" class="form-control" id="file" name="logo">
    </div>
    <div class="form-group" style="margin-left: 15px;">
      <label for="names">Name:</label>
      <input type="text" class="form-control" id="names" name="name" value="<%= @profile.name %>">
    </div>
    <div class="form-group" style="margin-left: 15px;">
      <label for="dsc">Description:</label>
      <textarea class="form-control" rows="5" id="dsc" name="description">
        <%= @profile.description %>
      </textarea>
    </div>
    <div class="form-group" style="margin-left: 15px;">
      <label for="fb">Facebook:</label>
      <input type="text" class="form-control" id="fb" name="facebook" value="<%= @profile.facebook %>">
    </div>
    <div class="form-group" style="margin-left: 15px;">
      <label for="inst">Instagram:</label>
      <input type="text" class="form-control" id="inst" name="instagram" value="<%= @profile.instagram %>">
    </div>
    <button type="submit" class="btn btn-default" style="margin-left: 15px;">Update</button>
  <% end %>
</div>
